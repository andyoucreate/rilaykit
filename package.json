{
  "name": "@rilaykit/monorepo",
  "version": "1.0.0",
  "description": "A next-generation React form library with modularity, type safety, and extensibility at its core",
  "private": true,
  "author": "AND YOU CREATE <contact@andyoucreate.com>",
  "homepage": "https://rilay.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/andyoucreate/rilay.git"
  },
  "bugs": {
    "url": "https://github.com/andyoucreate/rilay/issues"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "type-check": "turbo run type-check",
    "clean": "turbo clean",
    "analyze": "node scripts/analyze-size.js",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "pnpm build && pnpm changeset:publish",
    "release:beta": "pnpm build && pnpm changeset:publish --tag beta",
    "release:alpha": "pnpm build && pnpm changeset:publish --tag alpha",
    "version:patch": "changeset version && changeset tag",
    "version:minor": "changeset version && changeset tag",
    "version:major": "changeset version && changeset tag",
    "prerelease": "changeset pre enter",
    "prerelease:exit": "changeset pre exit",
    "version-packages": "changeset version",
    "analyze-size": "node scripts/analyze-size.js",
    "analyze-size:report": "node scripts/analyze-size.js --report",
    "size": "pnpm build && pnpm analyze-size"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "tsup": "^8.5.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4",
    "zod": "^3.22.4"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
