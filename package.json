{
  "name": "@rilay/monorepo",
  "version": "1.0.0",
  "description": "A next-generation React form library with modularity, type safety, and extensibility at its core",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "turbo run test",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=packages/* && changeset publish",
    "analyze-size": "node scripts/analyze-size.js",
    "analyze-size:report": "node scripts/analyze-size.js --report",
    "size": "pnpm build && pnpm analyze-size"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "tsup": "^8.5.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4",
    "zod": "^3.22.4"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
