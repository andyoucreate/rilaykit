{
  "name": "@streamline/flow-engine",
  "version": "1.0.0",
  "description": "Flow execution engine for multi-step workflows in Streamline",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "test": "vitest"
  },
  "dependencies": {
    "@streamline/form-engine": "workspace:*",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/streamline/streamline.git",
    "directory": "packages/core/flow-engine"
  },
  "keywords": [
    "forms",
    "workflows",
    "multi-step",
    "flow",
    "react",
    "typescript"
  ]
} 