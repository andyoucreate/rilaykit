{
  "name": "@streamline/form-engine",
  "version": "1.0.0",
  "description": "Core form engine for Streamline - Abstract form engine with state management and events",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "zod": ">=3.0.0"
  },
  "dependencies": {
    "immer": "^10.0.3",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "jest": "^29.7.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "zod": "^3.22.4"
  },
  "keywords": ["forms", "react", "typescript", "validation", "state-management"],
  "repository": {
    "type": "git",
    "url": "https://github.com/streamline/streamline.git",
    "directory": "packages/core/form-engine"
  },
  "license": "MIT"
}
