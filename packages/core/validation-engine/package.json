{
  "name": "@streamline/validation-engine",
  "version": "1.0.0",
  "description": "Validation engine for Streamline - Schema-based validation with async support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "zod": ">=3.0.0"
  },
  "dependencies": {
    "@streamline/form-engine": "workspace:*"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "zod": "^3.22.4"
  },
  "keywords": ["validation", "schema", "typescript", "zod", "async"],
  "repository": {
    "type": "git",
    "url": "https://github.com/streamline/streamline.git",
    "directory": "packages/core/validation-engine"
  },
  "license": "MIT"
}
