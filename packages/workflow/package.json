{
  "name": "@rilaykit/workflow",
  "version": "0.1.2",
  "private": false,
  "description": "Workflow and multi-step form utilities for RilayKit",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": ["react", "workflow", "multi-step", "forms", "typescript"],
  "author": "AND YOU CREATE <contact@andyoucreate.com>",
  "license": "MIT",
  "homepage": "https://rilay.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/andyoucreate/rilay.git"
  },
  "bugs": {
    "url": "https://github.com/andyoucreate/rilay/issues"
  },
  "dependencies": {
    "@rilaykit/core": "workspace:*",
    "@rilaykit/forms": "workspace:*",
    "zustand": "^5.0.9"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.8.3"
  }
}
